@using KodlaManisa.Models
@using GridMvc.Html
@model List<tblAtolyeler>
@{
    ViewBag.Title = "Atolyeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="card card-dark">
            <div class="card-header">
                <h1 class="card-title" style="margin-top:8px">ATÖLYELER</h1><a href="/Atolye/AtolyeEkle" class="btn btn-primary" style="float:right">Yeni Atölye Kaydı</a>
                <div class="col-sm-12 col-md-3" style="float:right; ">

                </div>
            </div>
        </div>
    </div>
</div>
<div class="card-body">
    <div style="margin:20px">

        @Html.Grid(Model).Columns(columns =>
{

columns.Add(m=>m.AtolyeAdi)
.Titled("Atölye Adı")
.Filterable(true)
.Sanitized(false)
.Sortable(true)
.Encoded(false);
columns.Add(m=>m.AtolyeTuru.AtolyeTurAdi)
.Titled("Atölye Türü")
.Filterable(true)
.Sanitized(false)
.Sortable(true)
.Encoded(false);
columns.Add(m => m.Ilce.IlceAdi)
.Titled("İlçesi")
.Filterable(true)
.Sanitized(false)
.Sortable(true)
.Encoded(false);
columns.Add(m => m.AtolyeAdres)
.Titled("Atölye Adresi")
.Filterable(true)
.Sanitized(false)
.Sortable(true)
.Encoded(false);
columns.Add()
.Titled("İşlemler")
.Sanitized(false)
.Encoded(false)
.SetWidth(20)
.RenderValueAs(o => Html.ActionLink("Düzenle", "AtolyeGuncelle", "Atolye", new { id = o.ID }, new { @class = "btn btn-success btn-sm" })
.ToHtmlString());
columns.Add()
.Sanitized(false)
.Encoded(false)
.SetWidth(20)
.RenderValueAs(o => Html.ActionLink("Sil", "Sil", "Atolye", new { id = o.ID }, new { @class = "btn btn-danger btn-sm" })
.ToHtmlString());
columns.Add()
.Sanitized(false)
.Encoded(false)
.SetWidth(30)
.RenderValueAs(o => Html.ActionLink("Detay", "AtolyeDetay", "Atolye", new { id = o.ID }, new { @class = "btn btn-info btn-sm" })
.ToHtmlString());

}).WithPaging(15)

