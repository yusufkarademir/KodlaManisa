@model KodlaManisa.Models.EntityFramework.tblOkullar
@{
    ViewBag.Title = "OkulGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="card card-dark">
            <div class="card-header">
                <h1 class="card-title" style="margin-top:8px">OKUL GÜNCELLE</h1><a href="/Okul/Okullar" class="btn btn-primary" style="float:right">OKULLAR</a>
                <div class="col-sm-12 col-md-3" style="float:right; ">
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container" style="margin:auto;">

    @using (Html.BeginForm("Guncelle", "Okul", FormMethod.Post))
    {

    <div class="form-group" style="margin:auto;">

        <div class="row" style="margin-top:20px">
            <div class="col-sm-2" align="right"> <label style="margin-left:5px"> Okul Kodu :</label></div>
            <div class="col-sm-6 col-md-7" align="center">  @Html.TextBoxFor(m => m.OkulKodu, new { @class = "form-control" }) </div>
        </div>

        <div class="row" style="margin-top:20px">
            <div class="col-sm-2" align="right"> <label style="margin-left:5px"> İlçesi :</label></div>
            <div class="col-sm-6 col-md-7" align="center">  @Html.DropDownListFor(m => m.tblIlceler.IlceID, (List<SelectListItem>)ViewBag.ilce, new { @class = "form-control" }) </div>
        </div>

        <div class="row" style="margin-top:20px">
            <div class="col-sm-2" align="right"> <label style="margin-left:5px"> Okul Türü :</label></div>
            <div class="col-sm-6 col-md-7" align="center">  @Html.DropDownListFor(m => m.tblOkulTuru.OkulTuruID, (List<SelectListItem>)ViewBag.okulTuru, new { @class = "form-control" }) </div>
        </div>

        <div class="row" style="margin-top:20px">
            <div class="col-sm-2" align="right"> <label style="margin-left:5px"> Okul Adı :</label></div>
            <div class="col-sm-6 col-md-7" align="center">   @Html.TextBoxFor(m => m.OkulAdi, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Okul Müdürü :</label></div>
            <div class="col-sm-6 col-md-7" align="center"> @Html.TextBoxFor(m => m.OkulMuduru, new { @class = "form-control" })</div>
        </div>
        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Okul Telefon :</label></div>
            <div class="col-sm-6 col-md-7" align="center"> @Html.TextBoxFor(m => m.OkulTel, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Okul Adresi :</label></div>
            <div class="col-sm-6 col-md-7" align="center"> @Html.TextAreaFor(m => m.OkulAdres, new { @class = "form-control" })</div>
        </div>

        @Html.HiddenFor(m => m.OkulID)
        <div align="center" style="margin:15px">
            <button class="btn btn-info">Güncelle</button>
        </div>
    </div>
    }
</div>
