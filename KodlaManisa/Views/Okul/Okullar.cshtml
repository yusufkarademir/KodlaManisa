@using KodlaManisa.Models
@using GridMvc.Html
@model List<tblOkullar>
@{
    ViewBag.Title = "Okullar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="card card-dark">
            <div class="card-header">
                <h1 class="card-title" style="margin-top:8px">OKULLAR</h1><a href="/Okul/OkulEkle" class="btn btn-primary" style="float:right">Yeni Okul Kaydı</a>
                <div class="col-sm-12 col-md-3" style="float:right; ">

                </div>
            </div>
        </div>
    </div>
</div>

<div style="margin:10px">


    @Html.Grid(Model).SetLanguage("ru").Columns(columns =>
    {
 columns.Add(m=>m.ID)
    .Titled("Okul Kodu")
    .Filterable(true)
    .Sanitized(false)
    .Sortable(true)
    .SetWidth(10)
    .Encoded(false);
    columns.Add(m=>m.OkulAdi)
    .Titled("Okul Adı")
    .Filterable(true)
    .Sanitized(false)
    .Sortable(true)
    .Encoded(false);
    columns.Add(m=>m.tblIlceler.IlceAdi)
    .Titled("İlçesi")
    .Filterable(true)
    .Sanitized(false)
    .Sortable(true)
    .Encoded(false);
    columns.Add(m => m.tblOkulTuru.OkulTuru)
    .Titled("Kademesi")
    .Filterable(true)
    .Sanitized(false)
    .Sortable(true)
    .Encoded(false);
    columns.Add()
    .Titled("İşlemler")
    .Sanitized(false)
    .Encoded(false)
    .SetWidth(20)
    .RenderValueAs(o => Html.ActionLink("Düzenle", "OkulGuncelle", "Okul", new { id = o.ID }, new { @class = "btn btn-success" })
    .ToHtmlString());
    columns.Add()
    .Sanitized(false)
    .Encoded(false)
    .SetWidth(20)
    .RenderValueAs(o => Html.ActionLink("Sil", "Sil", "Okul", new { id = o.ID }, new { @class = "btn btn-danger" })
    .ToHtmlString());
    columns.Add()
    .Sanitized(false)
    .Encoded(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Detay", "OkulDetay", "Okul", new { id = o.ID }, new { @class = "btn btn-info" })
    .ToHtmlString());

    }).WithPaging(15)


