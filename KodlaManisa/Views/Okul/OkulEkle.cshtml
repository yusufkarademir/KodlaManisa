@model KodlaManisa.Models.EntityFramework.tblOkullar
@{
    ViewBag.Title = "OkulEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin:50px">
    <h2>Okul Ekleme Sayfası</h2>
</div>

<form method="post" class="form-group">
    <div class="accent-blue" style="margin:50px">
        <div>
            <label>Okul Kodu</label>
            <input type="text" class="form-control" name="OKULKODU" />
        </div>
        <div>
            <label>Okul İlcesi</label>
            @Html.DropDownListFor(m => m.tblIlceler.IlceID, (List<SelectListItem>)ViewBag.ilce, new { @class = "form-control" })
        </div>
        <div>
            <label>Okul Türü</label>
            @Html.DropDownListFor(m => m.tblOkulTuru.OkulTuruID, (List<SelectListItem>)ViewBag.okulTuru, new { @class = "form-control" })
        </div>
        <div>
            <label>Okul Adı</label>
            <input type="text" class="form-control" name="OKULADI" />
        </div>

        <div>
            <label>Okul Adresi</label>
            <input type="text" class="form-control" name="OKULADRES" />
        </div>
        <div style="margin-top:15px">
            <button class="btn btn-info" id="btn1">Okul Ekle</button>
        </div>
    </div>
    <script>
        $('#btn1').click(function () {
            alet('Okul Ekleme İşlemi Yapıldı...!');
        });
    </script>

</form>