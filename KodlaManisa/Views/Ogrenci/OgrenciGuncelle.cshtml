@model KodlaManisa.Models.EntityFramework.tblOgrenciler
@{
    ViewBag.Title = "OgrenciGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="card card-dark">
            <div class="card-header">
                <h1 class="card-title" style="margin-top:8px">ÖĞRENCİ GÜNCELLE</h1><a href="/Ogretmen/Ogretmenler" class="btn btn-primary" style="float:right">ÖĞRENCİLER</a>
                <div class="col-sm-12 col-md-3" style="float:right; ">
                </div>
            </div>
        </div>
    </div>
</div>



<div class="container" style="margin:auto;">
    @using (Html.BeginForm("Guncelle", "Ogrenci", FormMethod.Post))
    {

        <div class="row" style="margin-top:20px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">T.C. Kimlik No:</label></div>
            <div class="col-sm-6 col-md-7" align="center"> @Html.TextBoxFor(m => m.OgrenciTC, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Öğrenci Adı :</label></div>
            <div class="col-sm-6 col-md-7" align="center"> @Html.TextBoxFor(m => m.OgrenciAdi, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Öğrenci Soyadı :</label></div>
            <div class="col-sm-6 col-md-7" align="center"> @Html.TextBoxFor(m => m.OgrenciSoyadi, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">İlçesi :</label></div>
            <div class="col-sm-6 col-md-7" align="center"> @Html.DropDownListFor(m => m.tblIlceler.IlceID, (List<SelectListItem>)ViewBag.ilce, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Okul Tipi :</label></div>
            <div class="col-sm-6 col-md-7" align="center">
                <td width="60%">

                    <select name="okultipi" id="okultipi" size="1" tabindex="3" class="form-control">
                        <option value="" selected="">OKUL TİPİ SEÇİNİZ</option>
                        <option value="1">OKULÖNCESİ</option>
                        <option value="2">İLKOKUL</option>
                        <option value="3">ORTAOKUL</option>
                        <option value="4">ORTAÖĞRETİM</option>
                    </select>
                </td>
            </div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Okulu :</label></div>
            <div class="col-sm-6 col-md-7" align="center"> @Html.DropDownListFor(m => m.tblOkullar.OkulID, (List<SelectListItem>)ViewBag.okul, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Sınıfı :</label></div>
            <div class="col-sm-6 col-md-7" align="center">@Html.DropDownListFor(m => m.tblOkulSiniflar.SinifID, (List<SelectListItem>)ViewBag.sinif, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Öğrenci Numarası :</label></div>
            <div class="col-sm-6 col-md-7" align="center"> @Html.TextBoxFor(m => m.OgrenciNo, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Öğrenci Telefonu :</label></div>
            <div class="col-sm-6 col-md-7" align="center">@Html.TextBoxFor(m => m.OgenciTelefon, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Öğrenci Eposta :</label></div>
            <div class="col-sm-6 col-md-7" align="center">@Html.TextBoxFor(m => m.OgrenciEposta, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Okul Öğretmeni :</label></div>
            <div class="col-sm-6 col-md-7" align="center">@Html.DropDownListFor(m => m.tblOgretmenler.OgretmenID, (List<SelectListItem>)ViewBag.ogretmen, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Velisinin Adı Soyadı :</label></div>
            <div class="col-sm-6 col-md-7" align="center"> @Html.TextBoxFor(m => m.OgrenciVeli, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Veli İletişim Numarası :</label></div>
            <div class="col-sm-6 col-md-7" align="center">  @Html.TextBoxFor(m => m.OgrenciVeliTelefon, new { @class = "form-control" })</div>
        </div>

        <div class="row" style="margin-top:8px">
            <div class="col-sm-2" align="right"><label style="margin-left:5px">Veli Eposta :</label></div>
            <div class="col-sm-6 col-md-7" align="center"> @Html.TextBoxFor(m => m.OgrenciVeliEposta, new { @class = "form-control" })</div>
        </div>

        @Html.HiddenFor(m => m.OgrenciID)
        <div align="center" style="margin-top:15px">
            <button class="btn btn-info">Güncelle</button>
        </div>
    }
</div>
