@using KodlaManisa.Models.EntityFramework
@model List<tblOgrenciler>
@{
    ViewBag.Title = "Ogrenciler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="card card-dark">
            <div class="card-header">
                <h1 class="card-title" style="margin-top:8px">ÖĞRENCİLER</h1><a href="/Ogrenci/OgrenciEkle" class="btn btn-primary" style="float:right">Yeni Öğrenci Kaydı</a>
                <div class="col-sm-12 col-md-3" style="float:right; ">
                </div>
            </div>
        </div>
    </div>
</div>


<div style="margin:20px">
    <table class="table table-bordered">
        <tr>
           
            <th>TC</th>
            <th>ADI</th>
            <th>SOYADI</th>
            <th>ILCESI</th>
            <th>OKULU</th>
            <th>SINIFI</th>
            <th>İŞLEMLER</th>

        </tr>
        <tbody>
            @foreach (var ogrenci in Model)
            {
            <tr>
               
                <td>@ogrenci.OgrenciTC</td>
                <td>@ogrenci.OgrenciAdi</td>
                <td>@ogrenci.OgrenciSoyadi</td>
                <td>@ogrenci.tblIlceler.IlceAdi</td>
                <td>@ogrenci.tblOkullar.OkulAdi</td>
                <td>@ogrenci.tblOkulSiniflar.SinifAdi</td>
                <td>
                    <a href="/Ogrenci/Sil/@ogrenci.OgrenciID" class="btn btn-danger">Sil</a>
                    <a href="/Ogrenci/OgrenciGuncelle/@ogrenci.OgrenciID" class="btn btn-success">Düzenle</a>
                    <a href="/Atolye/OgrenciDetay/@ogrenci.OgrenciID" class="btn btn-info">Detay</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <a href="/Ogrenci/OgrenciEkle" class="btn btn-primary">Yeni Öğrenci Kaydı</a>
</div>

