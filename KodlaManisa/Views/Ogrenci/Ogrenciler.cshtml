@using KodlaManisa.Models
@model List<tblOgrenciler>
@{
    ViewBag.Title = "Ogrenciler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="card card-dark">
            <div class="card-header">
                <h1 class="card-title" style="margin-top:8px">ÖĞRENCİLER</h1><a href="/Ogrenci/Index" class="btn btn-primary" style="float:right"><< ÖĞRENCİ İŞLEMLERİ</a>
                <div class="col-sm-12 col-md-3" style="float:right; ">
                </div>
            </div>
        </div>
    </div>
</div>


<div style="margin:20px">
    <table class="table table-bordered">
        <tr>

            <th>TC</th>
            <th>ADI</th>
            <th>SOYADI</th>
            <th>OKULU</th>
            <th>SINIFI</th>
            <th>İŞLEMLER</th>

        </tr>
        <tbody>
            @foreach (var ogrenci in Model)
            {
                <tr>
                    <td>@ogrenci.OgrenciTC</td>
                    <td>@ogrenci.OgrenciAdi</td>
                    <td>@ogrenci.OgrenciSoyadi</td>
                    <td>@*@Html.DisplayFor(m=>m.OkulOgretmenleri.Okul_ID)*@</td>
                    <td> @*@ogrenci.OkulSinif.SinifAdi*@</td>
                        <td>
                        <a href="/Ogrenci/Sil/@ogrenci.ID" class="btn btn-danger">Sil</a>
                        <a href="/Ogrenci/OgrenciGuncelle/@ogrenci.ID" class="btn btn-success">Düzenle</a>
                        <a href="/Ogrenci/OgrenciDetay/@ogrenci.ID" class="btn btn-info">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Ogrenci/OgrenciEkle" class="btn btn-primary">Yeni Öğrenci Kaydı</a>
</div>

